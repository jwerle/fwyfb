alias ls=cat

function mv {
  rm -riv $@
}

function cat {
  let max=${#CATS[@]}
  let i=$(expr $RANDOM % $max)
  echo ${CATS[$i]}
}

function touch {
  rm -f $1
  cat > $1
}

function curl {
  wget https://google.com
}

function df {
  du $@
}

function cd {
  cat
}

function git () {
  ssh $@
}
